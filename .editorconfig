# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = single

# CSS files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Batch files
[*.{bat,cmd}]
indent_style = space
indent_size = 2

# Config files
[*.{rc,config}]
indent_style = space
indent_size = 2

# Project specific
[.npmrc]
indent_style = space
indent_size = 2

[.npmignore]
indent_style = space
indent_size = 2

[.npm-global/**]
indent_style = space
indent_size = 2

[.npm-cache/**]
indent_style = space
indent_size = 2 